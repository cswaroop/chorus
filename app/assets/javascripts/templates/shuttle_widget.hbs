<div class="shuttle_header">
    <div class="search_container">
        <div>
            <a class="add_all" href="#">{{t "shuttle.add_all"}}</a>
            <input type="text" class="search"/>
        </div>
    </div>

    <div class="summary">
        <div>
            <span class='object_name'>{{objectName}}:</span> <span class="selected_count"/>
            <a class="remove_all" href="#">{{t "shuttle.remove_all"}}</a>
        </div>
    </div>
</div>

<div class="shuttle_body">
<ul class="available">
    {{#each models}}
        <li data-id="{{id}}" class="{{#if isAdded}}added{{/if}} {{#if isNonRemovable}}non_removable{{/if}}">
            <div class="image">
                <img class="profile" src="{{imageUrl}}"/>
                <span class="fa-stack fa-lg checkmark">
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fa fa-check fa-stack-1x fa-inverse"></i>
                </span>
            </div>
            <div class="name" title="{{displayName}}">{{displayName}}</div>
            <a class="add" href="#">{{t "shuttle.add_entry"}}</a>
            <span class="was_added">{{#if isNonRemovable}}{{nonRemovableText}}{{else}}{{t "shuttle.was_added"}}{{/if}}</span>
        </li>
    {{/each}}
</ul>

<ul class="selected">
    {{#each models}}
    <li data-id="{{id}}" class="{{#if isAdded}}added{{/if}} {{#if isNonRemovable}}non_removable{{/if}}">
            <div class="image">
                <img class="profile" src="{{imageUrl}}"/>
            </div>
            <div class="name" title="{{displayName}}">{{displayName}}</div>
            {{#if isNonRemovable}}
                <span class="was_added">{{nonRemovableText}}</span>
            {{else}}
                <a class="remove" href="#">{{t "shuttle.remove_entry"}}</a>
            {{/if}}
        </li>
    {{/each}}
</ul>
</div>
